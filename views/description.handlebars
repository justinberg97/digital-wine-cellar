  <form>
  <div class="handle-bar">
    <label for="slide-bar">1-10 best to worst</label>
    <input type="range" class="control-range" id="ControlRange">
  </div>
</form>

  <p>
    <button class="btn btn-primary">Confirm</button>
  </p>
</div>
