  <p>{{grape}}</p>
  <p>{{vintage_date}}</p>
  <p>{{abv}}</p>
  <p>{{rating}}</p>
</div>

<div class="handle-bar">
   {{#if bottles.length}}
    <div class="col-md-6 bottle-list">
      <h3>Current Bottles:</h3>

      {{#each bottles as |bottle|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/api/bottle/{{bottle.id}}">{{bottle.name}}</a></h4>
             <h2>{{bottle.name}}</h2>
  <p>{{bottle.maker}}</p>
  <p>{{vintage_date}}</p>
  <p>{{bottle.grape}}</p>
  <p>{{bottle.abv}}</p>
  <p>{{bottle.rating}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

