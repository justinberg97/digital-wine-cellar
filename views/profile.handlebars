<div class="row">
  <div class="col-auto">
    <h2>Grape! You're logged in, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Project:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Name of Wine:</label>
        <input
          class="form-input"
          type="text"
          id="project-name"
          name="project-name"
        />
      </div>
      <div class="form-group">
        <label for="project-maker">Maker:</label>
        <input
          class="form-input"
          type="text"
          id="project-maker"
          name="project-maker"
        />
      </div>
      <div class="form-group">
        <label for="project-grape">Grape:</label>
        <input
          class="form-input"
          type="text"
          id="project-grape"
          name="project-grape"
        />
      </div>
      <div class="form-group">
        <label for="project-vintage">Vintage Date:</label>
        <input
          class="form-input"
          type="text"
          id="project-vintage"
          name="project-vintage"
        />
      </div>
      <div class="form-group">
        <label for="project-abv">ABV:</label>
        <input
          class="form-input"
          type="text"
          id="project-abv"
          name="project-abv"
        />
      </div>
      <div class="form-group">
        <label for="project-rating">Would You Purchase Again?:</label>
        <input
          class="form-input"
          type="text"
          id="project-rating"
          name="project-rating"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
    <div class="col-md-6 project-list">
      <h3>Current Projects:</h3>

      {{#each projects as |project|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{project.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>